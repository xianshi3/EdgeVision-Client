<Window x:Class="MachineVisionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MachineVisionApp"
        Title="机器视觉应用" 
        Height="600" 
        Width="1050"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- 自定义标题栏高度 -->
            <RowDefinition Height="*"/>
            <!-- 内容区域 -->
            <RowDefinition Height="Auto"/>
            <!-- 参数设置区域 -->
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <local:CustomTitleBar Grid.Row="0"/>

        <!-- 内容区域 -->
        <ScrollViewer Grid.Row="1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 原始视频流 -->
                <Border Grid.Column="0" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Margin="5" 
                        CornerRadius="5"
                        Background="White">
                    <Grid>
                        <Image x:Name="OriginalImage" Stretch="Uniform"/>
                        <Border BorderBrush="#80000000" CornerRadius="5" Visibility="Collapsed">
                            <TextBlock Text="Loading..." 
                                       FontSize="16" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- 边缘检测结果 -->
                <Border Grid.Column="1" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Margin="5" 
                        CornerRadius="5"
                        Background="White">
                    <Grid>
                        <Image x:Name="EdgeImage" Stretch="Uniform"/>
                        <Border BorderBrush="#80000000" CornerRadius="5" Visibility="Collapsed">
                            <TextBlock Text="Loading..." 
                                       FontSize="16" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- 显示参数的区域 -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="FaceCountTextBlock" 
                       Grid.Column="0" 
                       Text="检测到的人脸数量: 0" 
                       FontSize="14" 
                       Foreground="Black" 
                       Margin="5" 
                       HorizontalAlignment="Left"/>
            <TextBlock x:Name="EdgeThresholdTextBlock" 
                       Grid.Column="1" 
                       Text="边缘检测阈值:" 
                       FontSize="14" 
                       Foreground="Black" 
                       Margin="5" 
                       HorizontalAlignment="Right"/>
            <TextBox x:Name="Threshold1TextBox" 
                     Grid.Column="2" 
                     Text="100" 
                     Width="50" 
                     Margin="5"/>
            <TextBox x:Name="Threshold2TextBox" 
                     Grid.Column="3" 
                     Text="200" 
                     Width="50" 
                     Margin="5"/>
            <Button x:Name="ApplyThresholdsButton" 
                    Grid.Column="4" 
                    Content="应用" 
                    Margin="5" 
                    Click="ApplyThresholdsButton_Click"/>
            <Button x:Name="StartCameraButton" 
                    Grid.Column="5" 
                    Content="开启摄像头" 
                    Margin="5" 
                    Click="StartCameraButton_Click"/>
            <Button x:Name="StopCameraButton" 
                    Grid.Column="6" 
                    Content="关闭摄像头" 
                    Margin="5" 
                    Click="StopCameraButton_Click"/>
            <Button x:Name="LoadImageButton" 
                    Grid.Column="7" 
                    Content="加载图片" 
                    Margin="5" 
                    Click="LoadImageButton_Click"/>
        </Grid>
    </Grid>
</Window>