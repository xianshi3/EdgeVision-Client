<Window x:Class="MachineVisionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MachineVisionApp.Views"
        Title="机器视觉应用" Height="650" Width="1050"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 标题栏 -->
            <RowDefinition Height="*"/>
            <!-- 视频显示区域 -->
            <RowDefinition Height="Auto"/>
            <!-- 参数设置及按钮区域 -->
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Margin="0">
            <local:CustomTitleBar/>
        </Border>

        <!-- 视频显示区域 -->
        <Grid Grid.Row="1" Margin="20" Background="#EAEAEA">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 原始视频流 -->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <Image x:Name="OriginalImage" Stretch="Uniform"/>
            </Border>

            <!-- 边缘检测结果 -->
            <Border Grid.Row="0" Grid.Column="1" BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="5" Margin="10,0,0,0">
                <Image x:Name="EdgeImage" Stretch="Uniform"/>
            </Border>

            <!-- 图像数据标签 -->
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="原始图像:" FontSize="14" Foreground="#333333" Margin="5"/>
                <TextBlock Text="摄像头数据:" FontSize="14" Foreground="#333333" Margin="15,5,5,0"/>
                <TextBlock x:Name="CameraDataTextBlock" FontSize="14" Foreground="#333333" Margin="5,5,0,0"/>
            </StackPanel>

            <!-- 边缘检测数据标签 -->
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="边缘检测:" FontSize="14" Foreground="#333333" Margin="5"/>
                <TextBlock Text="人脸数量:" FontSize="14" Foreground="#333333" Margin="15,5,5,0"/>
                <TextBlock x:Name="FaceCountTextBlock" Text="0" FontSize="14" Foreground="#333333" Margin="5,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 参数设置及按钮区域 -->
        <Grid Grid.Row="2" Margin="20" VerticalAlignment="Bottom" Background="#EAEAEA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="边缘检测阈值 1:" FontSize="14" Foreground="#333333" Margin="5"/>
                <TextBox x:Name="Threshold1TextBox" Text="100" Width="60" Margin="5" Padding="3" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F5F5F5"/>
                <TextBlock Text="边缘检测阈值 2:" FontSize="14" Foreground="#333333" Margin="15,5,5,0"/>
                <TextBox x:Name="Threshold2TextBox" Text="200" Width="60" Margin="5" Padding="3" BorderThickness="1" BorderBrush="#CCCCCC" Background="#F5F5F5"/>
                <Button x:Name="ApplyThresholdsButton" Content="应用" Margin="15,0,0,0" Click="ApplyThresholdsButton_Click" Padding="5,2" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" Foreground="#333333">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="Gray"/>
                    </Button.Effect>
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="StartCameraButton" Content="开启摄像头" Margin="5" Click="StartCameraButton_Click" Padding="5,2" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" Foreground="#333333">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="Gray"/>
                    </Button.Effect>
                </Button>
                <Button x:Name="StopCameraButton" Content="关闭摄像头" Margin="5" Click="StopCameraButton_Click" Padding="5,2" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" Foreground="#333333">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="Gray"/>
                    </Button.Effect>
                </Button>
                <Button x:Name="LoadImageButton" Content="加载图片" Margin="5" Click="LoadImageButton_Click" Padding="5,2" BorderThickness="1" BorderBrush="#CCCCCC" Background="White" Foreground="#333333">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="Gray"/>
                    </Button.Effect>
                </Button>
            </StackPanel>

            <!-- 报错信息显示区域 -->
            <TextBlock Grid.Row="2" x:Name="ErrorMessageTextBlock" Text="" FontSize="14" Foreground="Red" Margin="5,10,5,0" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Window>
