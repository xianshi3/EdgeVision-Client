<Window x:Class="MachineVisionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MachineVisionApp.Views"
        Title="机器视觉应用" Height="650" Width="1050"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- 标题栏 -->
            <RowDefinition Height="*"/>
            <!-- 视频显示区域 -->
            <RowDefinition Height="130"/>
            <!-- 状态信息和参数区域，改大高度 -->
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <local:CustomTitleBar Grid.Row="0"/>

        <!-- 视频显示区域 -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 原始视频流 -->
                <Border Grid.Column="0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,5,0">
                    <Image x:Name="OriginalImage" Stretch="Uniform"/>
                </Border>

                <!-- 边缘检测结果 -->
                <Border Grid.Column="1"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="5,0,0,0">
                    <Image x:Name="EdgeImage" Stretch="Uniform"/>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- 状态信息和参数区域 -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 人脸数量 + 摄像头数据 -->
                <RowDefinition Height="*"/>
                <!-- 报错信息显示区域 -->
                <RowDefinition Height="Auto"/>
                <!-- 参数按钮行 -->
            </Grid.RowDefinitions>

            <!-- 人脸数量和摄像头数据 -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5" VerticalAlignment="Center" >
                <TextBlock x:Name="FaceCountTextBlock"
                           Text="检测到的人脸数量: 0"
                           FontSize="14"
                           Foreground="Black"
                           Margin="0,0,20,0"
                           VerticalAlignment="Center"/>
                <TextBlock Text="摄像头数据:" FontSize="14" Foreground="Black" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="CameraDataTextBlock"
                           FontSize="14"
                           Foreground="Black"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- 参数设置及按钮区域 -->
            <Grid Grid.Row="2" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="边缘检测阈值:" FontSize="14" Foreground="Black" Margin="5" VerticalAlignment="Center" Grid.Column="0"/>
                <TextBox x:Name="Threshold1TextBox" Text="100" Width="50" Margin="5" Grid.Column="1"/>
                <TextBox x:Name="Threshold2TextBox" Text="200" Width="50" Margin="5" Grid.Column="2"/>
                <Button x:Name="ApplyThresholdsButton" Content="应用" Margin="5" Click="ApplyThresholdsButton_Click" Grid.Column="3"/>

                <Button x:Name="StartCameraButton" Content="开启摄像头" Margin="5" Click="StartCameraButton_Click" Grid.Column="4"/>
                <Button x:Name="StopCameraButton" Content="关闭摄像头" Margin="5" Click="StopCameraButton_Click" Grid.Column="5"/>
                <Button x:Name="LoadImageButton" Content="加载图片" Margin="5" Click="LoadImageButton_Click" Grid.Column="6"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
