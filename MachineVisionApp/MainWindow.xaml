<Window x:Class="MachineVisionApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MachineVisionApp"
        Title="机器视觉应用" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" 
        WindowStyle="None"
        AllowsTransparency="True"
        BorderThickness="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- 自定义标题栏高度 -->
            <RowDefinition Height="*"/>
            <!-- 内容区域 -->
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <local:CustomTitleBar Grid.Row="0"/>

        <!-- 内容区域 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 原始视频流 -->
            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Margin="5" 
                    CornerRadius="5"
                    Background="White">
                <Grid>
                    <Image x:Name="OriginalImage" Stretch="Uniform"/>
                    <Border Background="#80000000" CornerRadius="5" Visibility="Collapsed">
                        <TextBlock Text="Loading..." 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- 边缘检测结果 -->
            <Border Grid.Column="1" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Margin="5" 
                    CornerRadius="5"
                    Background="White">
                <Grid>
                    <Image x:Name="EdgeImage" Stretch="Uniform"/>
                    <Border Background="#80000000" CornerRadius="5" Visibility="Collapsed">
                        <TextBlock Text="Loading..." 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>